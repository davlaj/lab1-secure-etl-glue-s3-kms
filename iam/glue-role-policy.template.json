{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowS3ReadAccessToRawData",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::{{RAW_BUCKET}}",
        "arn:aws:s3:::{{RAW_BUCKET}}/*"
      ]
    },
    {
      "Sid": "AllowS3WriteAccessToProcessedData",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::{{PROCESSED_BUCKET}}",
        "arn:aws:s3:::{{PROCESSED_BUCKET}}/*"
      ]
    },
    {
      "Sid": "AllowListAccessToProcessedDataBucket",
      "Effect": "Allow",
      "Action": "s3:ListBucket",
      "Resource": "arn:aws:s3:::{{PROCESSED_BUCKET}}"
    },
    {
      "Sid": "AllowKMSUsage",
      "Effect": "Allow",
      "Action": [
        "kms:Encrypt",
        "kms:Decrypt",
        "kms:GenerateDataKey",
        "kms:DescribeKey"
      ],
      "Resource": "{{KMS_ARN}}"
    }
  ]
}
